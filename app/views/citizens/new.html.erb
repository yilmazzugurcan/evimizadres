<%= form_with url: citizens_path, method: :post do |f| %>
<br/>
<br/>

  <div class="field">
    <%= label_tag 'Telefon Numarası' %>
    <%= text_field_tag 'phone' %>
  </div>
<br/>
<br/>
  <div class="field">
    <%= label_tag 'Cihaz UUID' %>
    <%= text_field_tag 'intercom_uuid' %>
  </div>
<br/>
<br/>
  <div class="field">
    <%= label_tag 'Ad' %>
    <%= text_field_tag 'first_name' %>
  </div>
<br/>
<div>
    <%= f.submit "Kaydet" %>
  </div>
<br/>
<% if flash[:notice] %>
<br/>
  <div class="notice"><%= flash[:notice] %></div>  
<% end %>

<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<% end %>





